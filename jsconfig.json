{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "jsx": "preserve",
        "strictFunctionTypes": true,
        "baseUrl": ".",
        "paths": {
            "@icons/*": [
                "components/icons/*"
            ],
            "@components/*": [
                "components/*"
            ],
            "@database": [
                "database/db"
            ],
        }
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}